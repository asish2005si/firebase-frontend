
{
  "entities": {
    "User": {
      "title": "User",
      "type": "object",
      "description": "Represents a user of the Smart Bank application, who can be a customer or an admin.",
      "properties": {
        "uid": {
          "type": "string",
          "description": "Unique identifier for the user, from Firebase Auth."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "role": {
          "type": "string",
          "description": "The role of the user, e.g., 'customer' or 'admin'.",
          "enum": ["customer", "admin"]
        },
        "fullName": {
          "type": "string",
          "description": "Full name of the user."
        },
        "mobile": {
            "type": "string",
            "description": "User's mobile phone number."
        },
        "address": {
            "type": "string",
            "description": "User's primary address."
        },
        "createdAt": {
          "type": "string",
          "description": "Timestamp indicating when the user account was created.",
          "format": "date-time"
        },
        "lastLogin": {
            "type": "string",
            "description": "Timestamp of the user's last login.",
            "format": "date-time"
        }
      },
      "required": ["uid", "email", "role", "createdAt"]
    },
    "Account": {
        "title": "Account",
        "type": "object",
        "description": "Represents a bank account held by a customer.",
        "properties": {
            "account_no": {
                "type": "string",
                "description": "Unique account number."
            },
            "customer_uid": {
                "type": "string",
                "description": "The UID of the user who owns this account."
            },
            "account_type": {
                "type": "string",
                "enum": ["savings", "current"],
                "description": "The type of bank account."
            },
            "balance": {
                "type": "number",
                "description": "The current balance of the account."
            },
            "status": {
                "type": "string",
                "enum": ["active", "dormant", "closed"],
                "description": "The current status of the account."
            },
            "createdAt": {
                "type": "string",
                "format": "date-time",
                "description": "Timestamp of when the account was created."
            }
        },
        "required": ["account_no", "customer_uid", "account_type", "balance", "status", "createdAt"]
    },
    "Transaction": {
        "title": "Transaction",
        "type": "object",
        "description": "Represents a single financial transaction.",
        "properties": {
            "txn_id": {
                "type": "string",
                "description": "Unique identifier for the transaction."
            },
            "account_no": {
                "type": "string",
                "description": "The account number associated with the transaction."
            },
            "txn_type": {
                "type": "string",
                "enum": ["debit", "credit"],
                "description": "The type of transaction."
            },
            "amount": {
                "type": "number",
                "description": "The amount of the transaction."
            },
            "balance_after": {
                "type": "number",
                "description": "The account balance after the transaction."
            },
            "description": {
                "type": "string",
                "description": "A brief description of the transaction."
            },
            "txn_time": {
                "type": "string",
                "format": "date-time",
                "description": "Timestamp of when the transaction occurred."
            },
            "performed_by": {
                "type": "string",
                "description": "UID of the user who initiated the transaction."
            }
        },
        "required": ["txn_id", "account_no", "txn_type", "amount", "balance_after", "txn_time"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/User"
      },
      "description": "Stores user profiles, for both customers and admins."
    },
    "/accounts/{accountId}": {
      "schema": {
        "$ref": "#/entities/Account"
      },
      "description": "Stores individual bank accounts. The customer_uid field links back to a user."
    },
    "/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "A log of all financial transactions."
    }
  }
}
