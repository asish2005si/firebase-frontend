
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files by default.
    // This is not secure for production user data.
    // TODO: Restrict access based on user roles and ownership.
    match /{allPaths=**} {
      allow read;
      allow write: if request.auth != null;
    }
  }
}
